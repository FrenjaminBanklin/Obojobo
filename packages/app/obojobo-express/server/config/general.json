{
	"default": {
		"cookieName": "obo_next",
		"secureCookie": true,
		"bodyParser": {
			"jsonOptions": {
				"limit": "2mb"
			},
			"textOptions": {
				"limit": "2mb"
			},
			"urlencodedOptions": {
				"extended": false
			}
		},
		"demoMode":{
			"purgeMode": "none",
			"purgeDaysAgo": 7
		},
		"editLocks": {
			"idleMinutes": 45,
			"warnMinutes": 40,
			"autoExpireMinutes":5
		},
		"allowImportDefault": true
	},
	"test": {
		"key": "value",
		"hostname": "obojobo.ucf.edu"
	},
	"development": {
		"cookieSecret": "REPLACE_ME_WITH_YOUR_SECRET",
		"editLocks": {
			"idleMinutes": 10,
			"warnMinutes": 5,
			"autoExpireMinutes": 5
		}
	},
	"production": {
		"secureCookie": {"ENV": "OBO_COOKIE_SECURE"},
		"cookieSecret": {
			"ENV": "OBO_COOKIE_SECRET"
		},
		"demoMode":{
			"purgeMode": {"ENV": "OBO_DEMO_PURGE_MODE"},
			"purgeDaysAgo": {"ENV": "OBO_DEMO_PURGE_DAYS_AGO"}
		},
		"editLocks": {
			"idleMinutes": {"ENV": "OBO_EDITLOCK_IDLE_MINUTES"},
			"warnMinutes": {"ENV": "OBO_EDITLOCK_IDLE_WARN_MINUTES"},
			"autoExpireMinutes": {"ENV": "OBO_EDITLOCK_EXPIRE_MINUTES"}
		}
	}
}
